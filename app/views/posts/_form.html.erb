<%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, class:"form-control" %><br />
  <%= f.label :content %>
  <%= f.text_area :content, class:"form-control" %><br />

  <%= f.submit f.object.new_record? ? "Create Post" : "Update Post", class:"btn btn-success btn-sm" %>
<% end %>
