<%= form_for @post do |f| %>
<div class="form-group">
  <%= f.label :title %>
  <%= f.text_field :title, class:"form-control" %>
</div>
<div class="form-group">
  <%= f.label :content %>
  <%= f.text_area :content, class:"form-control" %>
</div>
<div class="form-group">
  <%= f.label :category %>
  <%= f.collection_select(:category, Category.all, :id, :name) %>
</div>
  <%= f.submit f.object.new_record? ? "Create Post" : "Update Post", class:"btn btn-success btn-sm" %>
<% end %>
