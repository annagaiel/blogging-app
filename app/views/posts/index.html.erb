<h1>Best Blog</h1>

<table class="table table-striped">
  <tr>
    <th>Title</th>
    <th>Content</th>
    <td></td>
  </tr>
  <% @posts.each do |post| %>
  <tr>
    <td><a href="/posts/<%= post.id %>"><%= post.title %></a></td>
    <td><%= post.content %></td>
    <td><%= link_to "Delete", "/posts/#{post.id}", method: :delete, class:"btn-sm btn-danger" %></td>
  </tr>
  <% end %>
</table>

<%= link_to "New Post", new_post_path, class:"btn btn-sm btn-primary" %>
